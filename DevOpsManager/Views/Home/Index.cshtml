@{
    ViewData["Title"] = "Главная";
}

<h1 class="mt-4">Система управления CI/CD</h1>
<br></br>
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3">
            <div class="card-header">Пользователи</div>
            <div class="card-body">
                <h2 class="card-title">@ViewBag.TotalUsers</h2>
                <p class="card-text">Всего зарегистрировано</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success mb-3">
            <div class="card-header">Проекты</div>
            <div class="card-body">
                <h2 class="card-title">@ViewBag.TotalProjects</h2>
                <p class="card-text">Всего проектов</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning mb-3">
            <div class="card-header">Микросервисы</div>
            <div class="card-body">
                <h2 class="card-title">@ViewBag.TotalMicroservices</h2>
                <p class="card-text">Всего микросервисов</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-danger mb-3">
            <div class="card-header">Деплои</div>
            <div class="card-body">
                <h2 class="card-title">@ViewBag.TotalDeployments</h2>
                <p class="card-text">Всего деплоев</p>
            </div>
        </div>
    </div>
</div>

<hr />

<h2 class="mb-3">Метрики кластера</h2>
